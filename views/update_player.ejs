<!--include header-->
<%-include('include/_header')%>
<!--/include header-->

<!--Main Site-->
<main id="site-main">
    <div class="container">
        <div class="form-title text-center">
            <h2 class="text-dark">Izmena</h2>
            <span class="text-light">Promeni podatke igrača</span>
        </div>
        <!--add player form-->
        <!--formhandling-->
<form method="POST" id="update_player">
    <div class="new_player">
        <div class="form-group">
            <label for="ime" class="text-light">Ime</label>
            <input type="hidden" name="id" value="<%=player._id%>">
            <input type="text" name="ime" value="<%=player.ime%>" placeholder="Marko">
        </div>
        <div class="form-group">
            <label for="prezime" class="text-light">Prezime</label>
            <input type="text" name="prezime" value="<%=player.prezime%>" placeholder="Probic">
        </div>
        <div class="form-group">
            <label for="datum" class="text-light">Datum rođenja</label>
            <input type="text" name="datumR" value="<%=player.datumR%>" placeholder="1.1.1990">
        </div>
        <div class="form-group">
            <label for="pozicija" class="text-light">Pozicija</label>
            <div class="radio-inline">
                <input type="radio" name="pozicija" value="PG" <%= player.pozicija == 'PG' ? 'checked' : '' %>>
                <label for="pozicija" class="text-light">PG</label>
                <input type="radio" name="pozicija" value="SG" <%= player.pozicija == 'SG' ? 'checked' : '' %>>
                <label for="pozicija" class="text-light">SG</label>
                <input type="radio" name="pozicija" value="SF" <%= player.pozicija == 'SF' ? 'checked' : '' %>>
                <label for="pozicija" class="text-light">SF</label>
                <input type="radio" name="pozicija" value="PF" <%= player.pozicija == 'PF' ? 'checked' : '' %>>
                <label for="pozicija" class="text-light">PF</label>
                <input type="radio" name="pozicija" value="C" <%= player.pozicija == 'C' ? 'checked' : '' %>>
                <label for="pozicija" class="text-light">C</label>
            </div>
        </div>
        <div class="form-group">
            <label for="ugovorPocetak" class="text-light">Pocetak ugovora</label>
            <input type="text" name="ugovorPocetak" value="<%=player.ugovorPocetak%>" placeholder="1.1.2020">
        </div>
        <div class="form-group">
            <label for="ugovorKraj" class="text-light">Kraj ugovora</label>
            <input type="text" name="ugovorKraj" value="<%=player.ugovorKraj%>" placeholder="1.1.2024">
        </div>
        <div class="form-group">
            <button type="submit" class="btn text-dark-update">Sačuvaj</button>
        </div>
    </div>
</form>
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/"><i class="fas fa-angle-double-left"></i>All players</a>
            </div>
        </div>
    </div>
</main>
<!--/Main Site-->

<!--include footer-->
<%-include('include/_footer')%>
<!--/include footer-->